generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id            String   @id @default(cuid())
  fromName      String
  fromEmail     String
  phone         String?
  body          String
  context       Json?
  status        MessageStatus @default(RECEIVED)
  type          MessageType   @default(INBOUND)  // INBOUND = received from client, OUTBOUND = sent reply
  conversationId String? @unique
  retries       Int      @default(0)
  error         String?
  
  // New fields for Lead Management
  propertyId    String?
  agentId       String?
  read          Boolean  @default(false)
  deleted       Boolean  @default(false)  // Soft delete for Lixo/Trash
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  events        MessageEvent[]
}

model MessageEvent {
  id        String   @id @default(cuid())
  message   Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  messageId String
  type      EventType
  details   Json?
  createdAt DateTime @default(now())
}

enum MessageStatus {
  RECEIVED
  QUEUED
  SENT
  FAILED
  DELETED
}

enum MessageType {
  INBOUND   // Messages received from clients/leads
  OUTBOUND  // Replies sent by admin/agent
}

enum EventType {
  OUTBOUND_QUEUED
  OUTBOUND_SENT
  OUTBOUND_FAILED
  INBOUND_RECEIVED
}
