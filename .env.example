# ====================================
# Ribeira Azul - Environment Variables Template
# ====================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real credentials to version control

# ====================================
# Node Environment
# ====================================
NODE_ENV=production

# ====================================
# Database Configuration
# ====================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PASSWORD_URLENC=your_secure_postgres_password_here
POSTGRES_DB=ribeirazul

# ====================================
# Redis Configuration
# ====================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PASSWORD_URLENC=your_secure_redis_password_here

# ====================================
# JWT Configuration
# ====================================
JWT_SECRET=your_jwt_secret_key_at_least_64_characters_long_change_this

# ====================================
# CORS Configuration
# ====================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://www.yourdomain.com,https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGIN=https://www.yourdomain.com

# ====================================
# API Configuration
# ====================================
API_URL=https://www.yourdomain.com

# ====================================
# MinIO / S3 Configuration
# ====================================
MINIO_ROOT_USER=your_minio_admin_user
MINIO_ROOT_PASSWORD=your_secure_minio_password_here
S3_ACCESS_KEY_ID=your_s3_access_key_id
S3_SECRET_ACCESS_KEY=your_s3_secret_access_key
S3_BUCKET_NAME=your-bucket-name
S3_REGION=us-east-1

# ====================================
# Email Configuration - Auth Service
# ====================================
# SMTP for system emails (activation, password reset, etc.)
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=465
SMTP_SECURE=true
AUTH_SMTP_USER=noreply@yourdomain.com
AUTH_SMTP_PASS=your_smtp_password_here
AUTH_EMAIL_FROM=noreply@yourdomain.com
SMTP_VERIFY_CONNECTION=true

# ====================================
# Email Configuration - Messages Service
# ====================================
# SMTP for contact form emails
SMTP_USER=info@yourdomain.com
SMTP_PASS=your_info_smtp_password_here
EMAIL_FROM=info@yourdomain.com

# ====================================
# IMAP Configuration
# ====================================
# For incoming email processing
IMAP_HOST=imap.yourprovider.com
IMAP_PORT=993
IMAP_SECURE=true
IMAP_USER=info@yourdomain.com
IMAP_PASS=your_imap_password_here
IMAP_ENABLED=true
IMAP_POLL_INTERVAL=30000

# ====================================
# Service Timeouts (milliseconds)
# ====================================
AUTH_SERVICE_TIMEOUT=15000
PROPERTIES_SERVICE_TIMEOUT=15000
MEDIA_SERVICE_TIMEOUT=30000
SETTINGS_SERVICE_TIMEOUT=10000
USERS_SERVICE_TIMEOUT=10000
MESSAGES_SERVICE_TIMEOUT=10000

# ====================================
# Rate Limiting
# ====================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1m

# ====================================
# Logging
# ====================================
LOG_LEVEL=warn

# ====================================
# Security Configuration
# ====================================
HELMET_ENABLED=true
TRUST_PROXY=true

# ====================================
# Default Admin User Seed
# ====================================
SEED_DEFAULT_ADMIN=true
DEFAULT_ADMIN_EMAIL=admin@yourdomain.com
DEFAULT_ADMIN_PASSWORD=change_this_secure_password

# ====================================
# Development Settings (optional)
# ====================================
# ====================================
# Intelligence Service
# ====================================
OPENAI_API_KEY=your_openai_api_key_here
INTELLIGENCE_SERVICE_URL=http://intelligence:8088
# Provedor de Proxies (ex: Bright Data, SmartProxy)
PROXY_URL=http://user:pass@proxy-host:port
# Playwright settings
BROWSER_HEADLESS=true